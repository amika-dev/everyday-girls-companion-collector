@{
    ViewData["Title"] = "Login";
}

<div class="auth-container">
<div class="auth-card">
    <h2>Welcome Back</h2>
        <p>It's good to see you again! ✨</p>

    <form method="post" asp-action="Login" asp-controller="Account">
        @Html.AntiForgeryToken()
            
        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="eg-validation-message"></div>
        }

        <div class="form-group">
            <label for="email" class="eg-form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control eg-input" placeholder="Your email address..." required />
        </div>

        <div class="form-group">
            <label for="password" class="eg-form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control eg-input" placeholder="Enter your password..." required />
        </div>

        <div class="form-check eg-login-checkbox">
            <input type="checkbox" id="rememberMe" name="rememberMe" class="form-check-input" />
            <label for="rememberMe" class="form-check-label">Keep me signed in</label>
        </div>

            <button type="submit" class="btn btn-primary w-100">Let's Go</button>
        </form>

        <div class="auth-link">
            New here? <a asp-action="Register" asp-controller="Account">Start your journey</a>
        </div>
    </div>

    @if (ViewData["RandomTip"] is EverydayGirlsCompanionCollector.Models.GameplayTip tip)
    {
        <div class="eg-card eg-card--warm" style="margin-top: 24px; padding: 20px; max-width: 500px;">
            <p class="eg-subtitle" style="font-size: 0.8rem; margin-bottom: 8px; text-align: center;">
                Did you know?
            </p>
            <p style="margin: 0; font-size: 0.95rem; line-height: 1.5; color: var(--eg-text-muted); text-align: center;">
                @tip.Body
            </p>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
