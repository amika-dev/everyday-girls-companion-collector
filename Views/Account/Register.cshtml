@{
    ViewData["Title"] = "Register";
}

<div class="auth-container">
<div class="auth-card">
    <h2>Begin Your Journey</h2>
    <p>Let's start collecting companions together ✨</p>

    <form method="post" asp-action="Register" asp-controller="Account">
        @Html.AntiForgeryToken()
            
        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="eg-validation-message"></div>
        }

        <div class="form-group">
            <label for="email" class="eg-form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control eg-input" placeholder="Your email address..." required />
        </div>

        <div class="form-group">
            <label for="password" class="eg-form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control eg-input" placeholder="Choose a secure password..." required minlength="6" />
            <small class="form-text eg-hint">At least 6 characters</small>
        </div>

            <button type="submit" class="btn btn-primary w-100">Start My Journey ✨</button>
        </form>

        <div class="auth-link">
            Already have an account? <a asp-action="Login" asp-controller="Account">Welcome back</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
