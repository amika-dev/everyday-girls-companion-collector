@model EverydayGirlsCompanionCollector.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="auth-container">
<div class="auth-card">
    <h2>Begin Your Journey</h2>
    <p>Let's start collecting companions together ✨</p>

    <form method="post" asp-action="Register" asp-controller="Account">
        @Html.AntiForgeryToken()
            
        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="eg-validation-message"></div>
        }

        <div class="form-group">
            <label asp-for="Email" class="eg-form-label"></label>
            <input asp-for="Email" class="form-control eg-input" placeholder="Your email address..." />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="eg-form-label"></label>
            <input asp-for="Password" class="form-control eg-input" placeholder="Choose a secure password..." />
            <span asp-validation-for="Password" class="text-danger"></span>
            <small class="form-text eg-hint">At least 6 characters</small>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword" class="eg-form-label"></label>
            <input asp-for="ConfirmPassword" class="form-control eg-input" placeholder="Type your password again..." />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

            <button type="submit" class="btn btn-primary w-100">Start My Journey ✨</button>
        </form>

        <div class="auth-link">
            Already have an account? <a asp-action="Login" asp-controller="Account">Welcome back</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
