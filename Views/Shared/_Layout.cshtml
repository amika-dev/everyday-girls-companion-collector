<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Everyday Girls: Companion Collector</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EverydayGirlsCompanionCollector.styles.css" asp-append-version="true" />
</head>
<body>
<header>
    <nav class="eg-nav">
        <div class="eg-nav-container">
            <a class="eg-brand" asp-controller="Home" asp-action="Index">Everyday Girls</a>
            <button class="eg-nav-toggle" type="button" data-bs-toggle="collapse" data-bs-target=".eg-nav-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="eg-nav-toggle-icon">☰</span>
            </button>
            <div class="eg-nav-collapse collapse d-sm-flex justify-content-between">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <ul class="eg-nav-links">
                        <li class="eg-nav-item">
                            <a class="eg-nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="eg-nav-item">
                            <a class="eg-nav-link" asp-controller="DailyAdopt" asp-action="Index">Meet New Companions</a>
                        </li>
                        <li class="eg-nav-item">
                            <a class="eg-nav-link" asp-controller="Interaction" asp-action="Index">Spend Time Together</a>
                        </li>
                        <li class="eg-nav-item">
                            <a class="eg-nav-link" asp-controller="Collection" asp-action="Index">My Companions</a>
                        </li>
                        <li class="eg-nav-item">
                            <a class="eg-nav-link" asp-controller="Guide" asp-action="Index">Guide</a>
                        </li>
                    </ul>
                    <div class="eg-nav-user">
                        <span class="eg-username">@User.Identity.Name</span>
                        <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="eg-nav-button-logout">Logout</button>
                        </form>
                    </div>
                }
                else
                {
                    <ul class="eg-nav-links ms-auto">
                        <li class="eg-nav-item">
                            <a class="eg-nav-link" asp-controller="Guide" asp-action="Index">Guide</a>
                        </li>
                        <li class="eg-nav-item">
                            <a class="eg-nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="eg-nav-item">
                            <a class="eg-nav-link" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>
</header>
<div class="eg-page-container">
    <main role="main">
        @RenderBody()
    </main>
</div>

<footer class="eg-footer">
    <div class="eg-footer-content">
        &copy; @DateTime.UtcNow.Year Everyday Girls
    </div>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/countdown.js" asp-append-version="true"></script>
    <script src="~/js/timezone-display.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
